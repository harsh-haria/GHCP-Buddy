{
  "name": "ghcp-buddy",
  "displayName": "GHCP Buddy",
  "description": "Helps you automate flows inside of your GHCP chat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghcp-buddy.helloWorld",
        "title": "Hello World"
      }
    ],
    "chatParticipants": [
      {
        "id": "vscode-preprocessor-chat",
        "name": "preproc",
        "description": "GHCP Buddy Pre-processor"
      }
    ],
    "configuration": {
      "title": "GHCP Buddy Pre-processor",
      "properties": {
        "ghcpBuddy.enterPreprocessorPrompt": {
          "type": "string",
          "editPresentation": "multilineText",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  }
}
